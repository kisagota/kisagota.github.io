{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": {
      "text": "Gyerekek átlagos száma a háztartásokban",
      "subtitle": ["A EU27 országokban a gyerekek számának alakulása 2012-2020 között", "Forrás: Eurostat"]
    },
    "description": "An interactive line chart with embedded data.",
    "data": {
      "url": "https://raw.githubusercontent.com/kisagota/kisagota.github.io/main/helyesadatbazis.csv"
    },
    "layer": [
      {
        "mark": {
          "type": "line",
          "point": true,
          "tooltip": true
        },
        "encoding": {
          "x": {
            "field": "ev",
            "type": "temporal",
            "title": "Év",
            "axis": {
              "format": "%Y",
              "labelAngle": 0
            }
          },
          "y": {
            "field": "gyerekek_szama",
            "type": "quantitative",
            "title": "Gyerekek száma",
            "axis": {
              "titleFontSize": 12,
              "labelFontSize": 10
            }
          },
          "color": {
            "field": "orszagok",
            "type": "nominal",
            "title": "Ország",
            "scale": {
              "scheme": "category20"
            }
          }
        }
      },
      {
        "mark": {
          "type": "point",
          "tooltip": true
        },
        "encoding": {
          "x": {
            "field": "ev",
            "type": "temporal"
          },
          "y": {
            "field": "gyerekek_szama",
            "type": "quantitative"
          },
          "color": {
            "field": "orszagok",
            "type": "nominal"
          },
          "tooltip": [
            {"field": "orszagok", "type": "nominal", "title": "Ország"},
            {"field": "gyerekek_szama", "type": "quantitative", "title": "Gyerekek száma"}
          ]
        }
      }
    ],
    "width": 800,
    "height": 300,
    "config": {
      "axis": {
        "labelFontSize": 10,
        "titleFontSize": 12
      },
      "legend": {
        "orient": "",
        "titleFontSize": 12,
        "labelFontSize": 10,
        "columns": 3
      }
    }
  }
  